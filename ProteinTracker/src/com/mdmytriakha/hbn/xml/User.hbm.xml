<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD//EN"
		"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.mdmytriakha.entity.User" table="USERS">
		<id name="id" type="int">
			<column name="ID"/>
			<generator class="identity"/>
		</id>
		<property name="name" type="java.lang.String">
			<column name="NAME"/>
		</property>

		<many-to-one name="proteinData" class="com.mdmytriakha.entity.ProteinData" column="PROTEIN_DATA_ID"
		             cascade="save-update" unique="true"/>

		<list name="history" table="USER_HISTORY" inverse="true" cascade="save-update">
			<key column="USER_ID"/>
			<list-index column="POSITION"/>
			<one-to-many class="com.mdmytriakha.entity.UserHistory"/>
		</list>

		<set name="goalAlerts" table="USER_GOALALERT" cascade="save-update">
			<key column="USER_ID"/>
			<many-to-many class="com.mdmytriakha.entity.GoalAlert" column="GOALALERT_ID"/>
		</set>
	</class>
</hibernate-mapping>
